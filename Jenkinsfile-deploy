pipeline {
    agent any

    environment {
        IMAGE_NAME = "myapp"         // change this
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        PORT = "5000"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh """
                    docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                    """
                }
            }
        }

        stage('Deploy with Docker Compose') {
            steps {
                script {
                    // Cleanup old container
                    sh """
                    docker compose down || true
                    """

                    // Run with new image
                    sh """
                    IMAGE_NAME=${IMAGE_NAME} IMAGE_TAG=${IMAGE_TAG} PORT=${PORT} docker compose up -d --build
                    """
                }
            }
        }
    }

    post {
        always {
            sh "docker image prune -f"
        }
    }
}
